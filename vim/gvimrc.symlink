version 7.0

autocmd BufWritePost .gvimrc so ~/.gvimrc

" No sound on errors
set noerrorbells
set novisualbell
set t_vb=

if has("gui_gtk2")
  set guifont=Inconsolata\ 12
elseif has("gui_win32")
  set guifont=Consolas:h11:cANSI
endif

set guioptions-=T
set background=dark
colorscheme slate
set relativenumber

